<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive biometric and transaction data from cloud backup -->
        <exclude domain="sharedpref" path="fraud_detection_secure_prefs.xml"/>
        <exclude domain="database" path="fraud_detection.db"/>
    </cloud-backup>
    <device-transfer>
        <!-- Exclude sensitive data from device transfer for security -->
        <exclude domain="sharedpref" path="fraud_detection_secure_prefs.xml"/>
        <exclude domain="database" path="fraud_detection.db"/>
    </device-transfer>
</data-extraction-rules>
