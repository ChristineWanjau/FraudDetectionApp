<?xml version="1.0" encoding="utf-8"?>
<!--
    activity_main.xml - Main UI layout for fraud detection app
    
    Features as specified in goal.md:
    - Camera preview at top for face capture
    - Input field for transaction amount
    - Buttons: Enroll, Verify Transaction, Toggle SIM Change, View Logs
    - Status text for results (Approved/Blocked + reason)
    
    Optimized for Android Go devices with clean, lightweight design
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FAFAFA">

        <!-- App Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fraud Detection App"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#1976D2"
            android:layout_marginBottom="16dp" />

        <!-- Camera Preview Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Camera Preview -->
                <androidx.camera.view.PreviewView
                    android:id="@+id/previewView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true" />

                <!-- Camera Overlay Instructions -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position your face in the camera"
                    android:textColor="#FFFFFF"
                    android:background="#80000000"
                    android:padding="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:textSize="12sp" />

                <!-- Face Detection Indicator -->
                <View
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/face_outline"
                    android:alpha="0.3" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Transaction Amount Input -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction Amount (KES)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/amountEditText"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter amount (e.g. 5000)"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:maxLength="10" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actions"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:layout_marginBottom="12dp" />

                <!-- Primary Actions Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/enrollButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Enroll Face"
                        android:textSize="14sp"
                        android:background="@drawable/button_primary"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="8dp"
                        android:drawableStart="@drawable/ic_face_enroll"
                        android:drawablePadding="8dp" />

                    <Button
                        android:id="@+id/verifyButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Verify Transaction"
                        android:textSize="14sp"
                        android:background="@drawable/button_accent"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="8dp"
                        android:drawableStart="@drawable/ic_verify"
                        android:drawablePadding="8dp" />

                </LinearLayout>

                <!-- Secondary Actions Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/viewLogsButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="View Logs"
                        android:textSize="14sp"
                        android:background="@drawable/button_secondary"
                        android:textColor="#424242"
                        android:layout_marginEnd="8dp"
                        android:drawableStart="@drawable/ic_logs"
                        android:drawablePadding="8dp" />

                    <!-- SIM Change Toggle (for demo) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SIM Changed"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                        <Switch
                            android:id="@+id/simChangeSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Status Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ready - Position your face in the camera"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:background="#F5F5F5"
                    android:padding="12dp"
                    android:minHeight="60dp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_status"
                    android:drawablePadding="12dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Demo Info Panel -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Demo Instructions"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Enroll your face first\n2. Enter transaction amount\n3. Verify transaction\n4. Toggle SIM change to test fraud detection\n5. View logs to see audit trail"
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Daily limit: 10,000 KES\n• Works offline (airplane mode)\n• All data encrypted on-device"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
